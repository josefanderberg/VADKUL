rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HJÄLPFUNKTIONER ---
    
    // Är man inloggad?
    function isAuthenticated() {
      return request.auth != null;
    }

    // Är man ägare till datat? (t.ex. sin egen profil)
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Är man Admin? (Kräver att du sätter fältet 'isAdmin: true' på din user i Firestore)
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Är man värd för eventet? (Fältet 'host.uid' måste matcha)
    function isHost() {
       return isAuthenticated() && resource.data.host.uid == request.auth.uid;
    }

    // --- REGLER PER KOLLEKTION ---

    // 1. USERS
    match /users/{userId} {
      allow read: if true; // Behövs för att se andras profiler/bilder (även om man inte är inloggad)
      allow create: if isOwner(userId); // Man får skapa sin egen profil
      
      // Man får uppdatera sin egen profil...
      // ELLER om man bara uppdaterar 'rating' och 'ratingCount' (för att ge omdöme)
      allow update: if isOwner(userId) 
        && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['isVerified', 'verificationStatus']))
        || (isAuthenticated() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['rating', 'ratingCount']));
        
      // Admins får göra allt (t.ex. verifiera användare)
      allow write: if isAdmin();
      
      // UNDERSAMLING: Reviews (Omdömen)
      match /reviews/{reviewerId} {
        // Man får läsa alla omdömen (eller begränsa om man vill)
        allow read: if isAuthenticated();
        // Man får skriva ETT omdöme om man är den personen (reviewerId måste matcha mitt UID)
        allow write: if isAuthenticated() && request.auth.uid == reviewerId;
      }

      // UNDERSAMLING: Friends (Vänner)
      match /friends/{friendId} {
        allow read: if isAuthenticated();
        // Tillåt skrivning om:
        // 1. Man är ägare till profilen (userId == auth.uid) - Jag hanterar min och andras status hos mig
        // 2. Man är vännen som läggs till (friendId == auth.uid) - Jag lägger till mig själv som 'incoming' hos dig
        allow write: if isAuthenticated() && (request.auth.uid == userId || request.auth.uid == friendId);
      }
    }

    // 2. EVENTS
    match /events/{eventId} {
      allow read: if true; // Alla kan se events (eller ändra till isAuthenticated() om du vill ha det privat)
      
      allow create: if isAuthenticated(); // Bara inloggade får skapa
      
      allow delete: if isHost() || isAdmin(); // Bara värden eller admin får ta bort

      allow update: if 
        isAdmin() ||            // Admin får ändra allt
        isHost() ||             // Värden får ändra allt
         (isAuthenticated() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['attendees'])) ||
         // Tillåt alla (även oinloggade) att öka visningar
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views']);

      // UNDERSAMLING: Event Chat Messages
      match /messages/{messageId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
      }
    }
    
    // 3. CHATS (Privata meddelanden / Grupper)
    match /chats/{chatId} {
      // READ: Tillåt om man är med i arrayen (resursen måste finnas)
      allow read: if isAuthenticated() && (request.auth.uid in resource.data.participants);

      // CREATE: Tillåt om man lägger till sig själv i arrayen (resursen finns inte än -> kolla request)
      allow create: if isAuthenticated() && (request.auth.uid in request.resource.data.participants);

      // UPDATE: Tillåt om man REDAN är med (kolla resource)
      allow update: if isAuthenticated() && (request.auth.uid in resource.data.participants);
      
      // Undersamling: Messages
      match /messages/{messageId} {
        // Man får läsa meddelanden om man får läsa chatten (parent)
        allow read: if isAuthenticated() && (request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants);
        // Man får skriva om man är deltagare
        allow create: if isAuthenticated() && (request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants);
      }
    }
    
    // 4. NOTIFICATIONS (Om du använder det)
    match /notifications/{notifId} {
      allow read: if isAuthenticated() && resource.data.recipientId == request.auth.uid;
      allow create: if isAuthenticated(); // Tillåt användare att skicka notiser till varandra
      allow update: if isAuthenticated() && resource.data.recipientId == request.auth.uid; // TILLÅT uppdatering (markera som läst)
    }
    
    // 5. FEEDBACK (För din nya funktion)
    match /feedback/{feedbackId} {
        allow create: if true; // Eller isAuthenticated()
        allow read: if isAdmin();
    }
  }
}